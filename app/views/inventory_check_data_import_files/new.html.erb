<div id="content_detail" class="ui-corner-all">
  <h1 class="title"><%= t('page.new', :model => t('activerecord.models.inventory_check_data_import_file')) -%></h1>
<div id="content_list">
  
  <%= t('activerecord.attributes.inventory_check_data_import_file.description1') -%><br />
  <br />
  <br />

  <%= form_tag({:action => 'create'}, {:method => :post, :multipart => true}) do  -%>
    <% if @inventory_check_data_import_file.present? && @inventory_check_data_import_file.errors.present? %>
      <% @inventory_check_data_import_file.errors.full_messages.each do |msg| %>
      <div style="color: red;"><b><%= msg %></b></div>
      <% end %>
    <% end %>

    <%= hidden_field_tag :inventory_manage_id, @inventory_manage_id -%>

  <div class="field">
    <%= label_tag t('activerecord.attributes.inventory_check_data_import_file.edit_mode') -%><br />
    <% @edit_modes.collect do |c| -%>
      <%= radio_button_tag 'inventory_check_data_import_file_edit_mode', c.name, @inventory_check_data_import_file.edit_mode == c.name -%> <%= c.display_name.localize -%> &nbsp;
    <% end %>

  </div>

  <div class="field">
    <%= label_tag t('page.file') -%><br />
    <%= file_field_tag :inventory_check_data_import -%>
  </div>

  <div class="actions">
    <%= submit_tag t('helpers.submit.create') %>
  </div>
<%- end -%>

</div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <li><%= link_to t('page.back', :model => t('activerecord.models.inventory_check_datum')), inventory_manage_inventory_check_data_path(@inventory_manage) -%></li>
  </ul>
</div>
