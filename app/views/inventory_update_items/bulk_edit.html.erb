<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('inventory_page.bulk_update') -%> </h1>
<div id="content_list">
  <%= form_tag bulk_update_inventory_manage_inventory_update_items_path do %>

    <%= I18n.t('activerecord.attributes.inventory_update_items.screen_unit_description_1') -%> <br />
    <br />

    <div class="field">
      <%= I18n.t('activerecord.attributes.inventory_update_items.shelf_barcode') %><br />
      <%= select_tag :shelf_barcode, options_for_select(@inventory_shelf_barcodes.map{|c|[c.barcode,c]}), {:include_blank => ''} %>
    </div>

    <div class="field">
      <%= I18n.t('activerecord.attributes.inventory_update_items.result_status') %><br />
      <%= select_tag :result_stauts, options_for_select(@result_status.map{|c|[c.display_name,c]}), {:include_blank => ''} %>
    </div>

    <div class="field">
      <%= I18n.t('activerecord.attributes.inventory_update_items.circulation_statuses') %><br />
      <%= select_tag :shelf_category, options_for_select(CirculationStatus.all.map{|c|[c.display_name.localize,c]}), {:include_blank => ''} %>
    </div>

    <div class="field">
      <%= I18n.t('activerecord.attributes.inventory_update_items.shelf') %><br />
      <%= text_field_tag :shelf %>
    </div>

    <div class="field">
      <%= I18n.t('activerecord.attributes.inventory_update_items.skip_flag') %><br />
      <%= check_box_tag :skip_flag, true, false %>
    </div>

    <div class="actions">
      <%= submit_tag t('helpers.submit.update') %>
    </div>
  <% end %>
  <%#= javascript_tag("$('#inventory_manage_display_name').focus()") -%>
</div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <li><%= link_to t('page.back_to_index'), inventory_manage_inventory_check_results_path -%> </li>
  </ul>
</div>
